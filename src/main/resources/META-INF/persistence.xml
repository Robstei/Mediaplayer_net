<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
    <persistence-unit name="openjpa">
        <description>JPA Application Client</description>
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <class>Song</class>
        <properties>
            <property name="openjpa.ConnectionURL" value="jdbc:sqlite:SongsLibary.db" />
            <property name="openjpa.ConnectionDriverName" value="org.SQLite.Driver" />
            <property name="openjpa.ConnectionUserName" value="robin" />
            <property name="openjpa.ConnectionPassword" value="steil" />
            <property name="openjpa.jdbc.SynchronizeMappings" value="true"/>
            <property name="openjpa.RuntimeUnenhancedClasses" value="supported"/>
        </properties>
    </persistence-unit>
</persistence>
